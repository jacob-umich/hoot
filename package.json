{
  "name": "hoot",
  "displayName": "Hoot",
  "description": "A refernce manager",
  "version": "0.0.1",
  "repository": "https://github.com/jacob-umich/hoot",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "hoot.findArticle",
        "title": "Search Articles"
      },
      {
        "command": "hoot.addArticle",
        "title": "Add Articles",
        "icon":{
          "dark": "icon.svg",
          "light": "icon.svg"
        }
      },
      {
        "command": "hoot.refresh",
        "title": "Refresh",
        "icon":{
          "dark": "refresh.svg",
          "light": "refresh.svg"
        }
      },
      {
        "command": "hoot.addBibs",
        "title": "Import Bib",
        "icon":{
          "dark": "icon.svg",
          "light": "icon.svg"
        }
      },
      {
        "command": "hoot.viewCat",
        "title": "View",
        "icon":{
          "dark": "icon.svg",
          "light": "icon.svg"
        }
      },
      {
        "command": "hoot.editCat",
        "title": "Edit Category",
        "icon":{
          "dark": "icon.svg",
          "light": "icon.svg"
        }
      },
      {
        "command": "hoot.addCat",
        "title": "Add Category",
        "icon":{
          "dark": "addCat.svg",
          "light": "addCat.svg"
        }
      },
      {
        "command": "hoot.showNotes",
        "title": "Open Notes",
        "icon":{
          "dark": "icon.svg",
          "light": "icon.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "hoot.addArticle",
          "when": "view == hootRef",
          "group": "navigation"
        },
        {
          "command": "hoot.addBibs",
          "when": "view == hootRef",
          "group": "navigation"
        },
        {
          "command": "hoot.refresh",
          "when": "view == hootRef",
          "group": "navigation"
        },
        {
          "command": "hoot.addCat",
          "when": "view == hootRef",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "hoot.viewCat",
          "when": "view==hootRef"
        },
        {
          "command": "hoot.showNotes",
          "when": "view==hootRef"
        }
      ]
    },
    "views": {
      "hoot":[
        {
          "id": "hootRef",
          "name": "References",
          "icon": "icon.svg",
          "contextualTitle": "References"
        },
        {
          "type": "webview",
          "id":"hoot.detailsView",
          "name": "Details"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "hoot",
          "title": "hoot",
          "icon":"icon.svg"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "serpapi": "^2.0.0"
  }
}
